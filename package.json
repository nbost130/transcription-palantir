{
  "name": "transcription-palantir",
  "version": "1.0.0",
  "description": "Modern TypeScript transcription system with BullMQ, Redis, and Whisper.cpp integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run dist/index.js",
    "start:api": "bun run dist/api/server.js",
    "start:worker": "bun run dist/workers/transcription-worker.js",
    "start:watcher": "bun run dist/services/file-watcher.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:integration": "vitest tests/integration",
    "lint": "echo 'Linting disabled - using TypeScript compiler for type checking'",
    "lint:fix": "echo 'Linting disabled - using TypeScript compiler for type checking'",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:build": "docker build -t transcription-palantir .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:staging": "bun run scripts/deploy-staging.ts",
    "deploy:production": "bun run scripts/deploy-production.ts"
  },
  "keywords": [
    "transcription",
    "whisper",
    "typescript",
    "bullmq",
    "redis",
    "fastify",
    "audio-processing"
  ],
  "author": "Mithrandir System",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^10.0.1",
    "axios": "^1.13.2",
    "bullmq": "^5.12.0",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^5.1.0",
    "node-cron": "^3.0.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.1.3",
    "redis": "^4.6.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}